<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="70dp"
        android:text="Crear nuevo recordatorio:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_alignStart="@id/textView6"
        android:layout_marginTop="40dp"
        android:text="¿Que hay que hacer?"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/textNombre"
        android:layout_width="326dp"
        android:layout_height="44dp"
        android:layout_below="@id/textView4"
        android:layout_alignStart="@id/textView4"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNombre"
        android:layout_alignStart="@id/textNombre"
        android:layout_marginTop="20dp"
        android:text="Añadir a la lista"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="324dp"
        android:layout_height="44dp"
        android:layout_below="@id/textView8"
        android:layout_alignStart="@id/textView8"
        android:layout_marginTop="20dp"
        android:entries="@array/opciones_spinner_lista"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_alignStart="@id/spinner"
        android:layout_marginTop="20dp"
        android:text="Fecha limite:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/textDate"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_below="@id/textView5"
        android:layout_alignStart="@id/textView5"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="date"
        android:onClick="mostrarSelectorFecha" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        android:onClick="irASegundoLayout"
        android:text="✓"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDate"
        android:layout_alignStart="@id/textDate"
        android:layout_marginTop="20dp"
        android:text="Hora de la notificacion:"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/TextTime"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_below="@id/textView2"
        android:layout_alignStart="@id/textView2"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="time" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTime"
        android:layout_alignStart="@id/TextTime"
        android:layout_marginStart="0dp"
        android:text="La hora asignada por defecto sera 8:00 am"
        android:textColor="@color/material_dynamic_neutral_variant60"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_alignStart="@id/textView7"
        android:layout_marginTop="20dp"
        android:text="Repita"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_alignStart="@id/textView3"
        android:layout_marginTop="20dp"
        android:entries="@array/opciones_spinner_repite"/>

    <ImageButton
        android:id="@+id/FechaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_alignStart="@id/textView5"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@android:drawable/ic_menu_today" />

    <ImageButton
        android:id="@+id/HoraButton"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView2"
        android:layout_alignStart="@id/textView2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="270dp"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />


</RelativeLayout>
